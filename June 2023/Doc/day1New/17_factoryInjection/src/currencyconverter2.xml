<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context"  
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
 http://www.springframework.org/schema/context 
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean id="currencyConverterFactory" class="training.spring.CurrencyConverterFactory">
	</bean>
	
	<bean id="currencyConverter"
			factory-bean="currencyConverterFactory"
			factory-method="getCurrencyConverter">
		<property name="exchangeRate" value="44.50" />
	</bean>

</beans>